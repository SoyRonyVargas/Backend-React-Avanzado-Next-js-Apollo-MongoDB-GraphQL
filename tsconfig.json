{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "module": "commonjs",
    "outDir": "./dist",
    // "baseUrl": "./src",
    "removeComments": true,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"],
      "@config/*": ["config/*"]
      // "~/*": ["./*"],
      // "@/*": [
      //   "./src/*",
      // ]
    },
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*",
    "src/**/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}
